

<div class="post">
	<h3><%= @post.ticker %></h3>
	<p><%= @post.body %></p>
</div>
<% @comments.each do |comm| %>
<div class="comments">
	<%# if current_user matches comment user_id %>

	<%# comm.content %>
	<%# link_to "Edit Comment", edit_post_comment_path(@post,@comment) %>

	<%# else %>
	<%=  comm.content %>
	<%= link_to "Edit Comment", edit_post_comment_path(@post,comm)%>

	<%# %>
</div>
<%end%>
<div class="postLinks">
	<%= link_to "Edit Post", edit_post_path(@post)%>
	<%= link_to "Add Comment", new_post_comment_path(@post)%>
</div>