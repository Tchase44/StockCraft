

<div class="post">
	<h3>
	<a href="/stocks/<%= @stock.id%>"><%= Stock.find_by(ticker: "#{@post.ticker}").ticker %>
	<span><%=link_to "[+]",add_to_watchlist_stock_path(@stock),method: :post%></span></h3>
	<p><%= @post.body %></p>
</div>
<% @comments.each do |comm| %>
<div class="comments">
	<% if comm.user == current_user %>
		<%= comm.content %>
		<%= link_to "Edit Comment", edit_post_comment_path(@post,comm)%>
	<%else%>
		<%= comm.content %>
	<%end%>
</div>
<%end%>
<div class="postLinks">
	<%if current_user == @post.user%>
		<%= link_to "Edit Post", edit_post_path(@post)%>
	<%else%>
		<%= link_to "Add Comment", new_post_comment_path(@post)%>
	<%end%>

</div>