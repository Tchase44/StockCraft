<h1>Edit your Comment</h1>

<div class="form">
	<%= form_for [@post,@comment] do |f| %>

		<%= f.label :content%><br>
		<%= f.text_area  :content,required: true%><br>

		<%= f.submit %>
		<%end%>
		<%= form_for [@post,@comment], method: :delete do |f| %>
			<%= f.submit "Delete Comment?",class: "destroy"%>
		<%end%>
</div>
